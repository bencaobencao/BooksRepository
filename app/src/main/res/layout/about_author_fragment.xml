<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/img_bookthumbnail_id"
            android:scaleType="centerCrop"
            android:src="@drawable/autor"/>

        <TextView
            android:id="@+id/tv_description_id"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Augusto Cury é psiquiatra, pesquisador da psicologia e escritor. Ele é professor de pós-graduação e conferencista em congressos nacionais e internacionais. Desenvolveu uma das poucas teorias mundiais sobre o processo de construção do pensamento e o funcionamento da mente, chamada Inteligência Multifocal…"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</LinearLayout>